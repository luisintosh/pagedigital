<%= simple_form_for(page_profile, url: update_profile_page_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :profile_image, input_html: { direct_upload: true, accept: 'image/*' } %>
    <%= f.input :header_image, input_html: { direct_upload: true, accept: 'image/*' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary'%>
  </div>
<% end %>
