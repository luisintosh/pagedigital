<div class="wrap h-100">
  <div class="wrap-inner pt-3">
    <div class="container vh-100">
<!--      NAVBAR-->
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container d-flex justify-content-between">
          <%= link_to root_url, class: 'navbar-brand' do %>
            <%= image_tag('logo_horizontal.svg', height: 30) %>
          <% end %>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to 'Enter', new_user_session_url, class: 'btn btn-secondary btn-lg border me-3' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_url, class: 'btn btn-primary btn-lg' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
<!--      MAIN CONTENT-->
      <div class="hero-container row h-100">
        <div class="col d-flex justify-content-center align-items-center">
          <div class="hero-content">
            <h1 class="fw-bolder">Share all your links in one single page, for free</h1>
            <div class="lead mb-4">
              Share and cross promote your links, music, videos, social media, and more on one page.
            </div>
            <%= link_to 'Create my own page', new_page_url, class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
        <div class="col d-flex justify-content-center align-items-center">
          <%= image_tag('elements/undraw_mobile_development_re_wwsn.svg', class: 'img-fluid') %>
        </div>
      </div>

<!--      FOOTER-->
      <%= render 'components/footer' %>
    </div>
  </div>
</div>