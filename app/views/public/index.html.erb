<div class="container-fluid">
  <div id="animation-globe" class="pt-4">
    <div class="container vh-100">
      <!--      NAVBAR-->
      <div class="navbar d-flex gap-4 justify-content-between">
        <div class="logo">
          <%= link_to root_url, class: 'navbar-brand' do %>
            <%= image_tag('logo_horizontal.svg', height: 30) %>
          <% end %>
        </div>
        <div class="menu">
          <%= link_to 'Enter', new_user_session_url, class: 'btn btn-outline-primary me-3' %>
          <%= link_to 'Sign up', new_user_registration_url, class: 'btn btn-primary d-none d-md-inline-block' %>
        </div>
      </div>

      <!--      MAIN CONTENT-->
      <div class="hero-container row h-100">
        <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
          <div class="hero-content text-center text-md-start">
            <h1 class="fw-bolder">Share all your links in one single page, for free</h1>
            <div class="lead mb-4">
              Share and cross promote your links, music, videos, social media, and more on one page.
            </div>
            <%= link_to 'Create my own page', new_page_url, class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid bg-primary text-white">
  <div class="container vh-100">
    <div class="row h-100">
      <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
        <%= image_tag('elements/undraw_mobile_development_re_wwsn.svg', class: 'img-fluid') %>
      </div>
      <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
        <div class="hero-content text-center text-md-end">
          <h1 class="fw-bolder">Generate and customize your bio link in seconds</h1>
          <div class="lead mb-4">
            Connect your social networks, website, store, videos, music, podcast, events and more.
            It all comes together in a link in bio landing page designed to engage your visitors.
          </div>
          <%= link_to 'Get started for free', new_page_url, class: 'btn btn-light btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid py-5">
  <div class="container vh-100">
    <div class="row h-100">
      <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
        <div class="hero-content text-center text-md-start">
          <h1 class="fw-bolder">Share your page digital anywhere you like!</h1>
          <div class="lead mb-4">
            Add your unique Page.digital URL to all the platforms and places you find your audience.
            Then use your QR code to drive your offline traffic online.
