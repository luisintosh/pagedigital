          <%= link_to 'Get started for free', new_page_url, class: 'btn btn-primary btn-lg mb-5' %>
        </div>
      </div>
      <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
        <%= image_tag('elements/undraw_swipe_options_2e4v.svg', class: 'img-fluid') %>
      </div>
    </div>
  </div>
</div>

