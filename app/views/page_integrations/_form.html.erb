<div class="container-md">
  <h2>Integration with external tools</h2>

  <div class="card">
    <div class="card-body">
      <%= simple_form_for(@page_integration, url: page_page_integration_url) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :facebook_pixel, hint: 'Meta Pixel' %>
          <%= f.input :google_analytics, hint: 'Global site tag (gtag.js)' %>
          <%= f.input :email_capture, as: :boolean %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
