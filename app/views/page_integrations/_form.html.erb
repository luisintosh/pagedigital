
<%= simple_form_for(@page_integration, url: page_page_integration_url) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :facebook_pixel %>
    <%= f.input :google_analytics %>
    <%= f.input :email_capture, as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary'%>
    <%= link_to :back, edit_page_path(@page_integration.page), class: 'btn' %>
  </div>
<% end %>
