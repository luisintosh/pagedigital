
<%= simple_form_for(@page_profile, url: page_page_profile_url) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :location %>
    <%= f.input :description %>
    <% if @page_profile.profile_image.representable? %>
      <%= image_tag @page_profile.profile_image, size: 150 %>
    <% end %>
    <%= f.input :profile_image, input_html: { direct_upload: true, accept: 'image/*' } %>
    <% if @page_profile.header_image.representable? %>
      <%= image_tag @page_profile.header_image, size: 150 %>
    <% end %>
    <%= f.input :header_image, input_html: { direct_upload: true, accept: 'image/*' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
