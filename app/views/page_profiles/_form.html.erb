<div class="container-md">
  <h2>Profile information</h2>

  <div class="card">
    <div class="card-body">
      <%= simple_form_for(@page_profile, url: page_page_profile_url) do |f| %>
        <div class="image-container mb-4">
          <div class="image-header">
            <% if @page_profile.header_image.representable? %>
              <%= image_tag @page_profile.header_image %>
            <% else %>
              <%= image_tag 'header_image_placeholder.svg' %>
            <% end %>
          </div>
          <div class="image-profile">
            <% if @page_profile.profile_image.representable? %>
              <%= image_tag @page_profile.profile_image, class: 'rounded-circle' %>
            <% else %>
              <%= image_tag 'profile_image_placeholder.svg', class: 'rounded-circle' %>
            <% end %>
          </div>
        </div>

        <%= render 'components/notice' %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :profile_image, input_html: { direct_upload: true, accept: 'image/*', class: 'form-control' } %>
          <%= f.input :header_image, input_html: { direct_upload: true, accept: 'image/*', class: 'form-control' } %>
          <%= f.input :display_name %>
          <%= f.input :location %>
          <%= f.input :description %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
