<%= turbo_frame_tag content_item do %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <%= link_to edit_page_content_item_path(content_item.page, content_item), class: 'col text-decoration-none' do %>
          <div class="row">
            <div class="col-auto">
              <%= content_item_image_tag(content_item, size: 75) %>
            </div>
            <div class="col d-flex flex-column justify-content-center">
              <div class="item-title"><%= content_item.title %></div>
              <div class="item-url text-muted"><%= content_item.url %></div>
            </div>
          </div>
        <% end %>
        <div class="col-auto d-flex align-items-center">
          <i class="bi bi-arrow-down-up"></i>
        </div>
      </div>
    </div>
  </div>
<% end %>