<%= turbo_frame_tag content_item do %>
  <div class="row">
    <div class="col-1">
      image
    </div>
    <div class="col-9">
      <div class="row">
        <div class="col-6">
          <strong>Url:</strong>
          <%= content_item.url %>
        </div>
        <div class="col-6">
          <strong>Title:</strong>
          <%= content_item.title %>
        </div>
        <div class="col-6">
          <strong>Subtitle:</strong>
          <%= content_item.subtitle %>
        </div>
        <div class="col-6">
          <strong>Position:</strong>
          <%= content_item.position %>
        </div>
      </div>
    </div>
    <div class="col-2">
      <%= link_to "Edit", edit_page_content_item_path(content_item.page, content_item), class: 'btn btn-sm btn-info' %>
      <%= button_to "Delete", url_for([content_item.page, content_item]), method: :delete, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
<% end %>