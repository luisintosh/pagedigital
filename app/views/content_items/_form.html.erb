<%= simple_form_for(@content_item, url: url_for([@content_item.page, @content_item])) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :embedded %>
    <%= f.input :highlight %>
    <%= f.input :custom_thumbnail %>
    <% if @content_item.custom_thumbnail_image.representable? %>
      <%= image_tag @content_item.custom_thumbnail_image, size: 150 %>
    <% end %>
    <%= f.input :custom_thumbnail_image, input_html: { direct_upload: true, accept: 'image/*' } %>
    <%= f.input :schedule %>
    <%= f.input :schedule_date %>
    <%= f.input :position %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to 'Cancel', page_content_items_url(@content_item.page), class: 'btn' %>
  </div>
<% end %>