
<%= simple_form_for(@page_contact, url: page_page_contact_url) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :display_public_email, as: :boolean %>
    <%= f.input :public_email %>
    <%= f.input :display_public_phone, as: :boolean %>
    <%= f.input :public_phone %>
    <%= f.input :public_phone_type, collection: PageContact.public_phone_types.keys, as: :radio_buttons %>
    <%#= f.input :main_contact_links %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary'%>
    <%= link_to :back, edit_page_path(@page_contact.page), class: 'btn' %>
  </div>
<% end %>
